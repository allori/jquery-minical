%html
  %head
    %title jQuery.minical
    = javascript_include_tag 'vendor/jquery-2.1.1.min', 'jquery.minical'
    = stylesheet_link_tag 'application', 'jquery.minical'
    %link(rel='icon' type='image/png' href='favicon.png')
    %script(type="text/javascript" src="http://use.typekit.com/aqp8xdq.js")
    :javascript
      try{Typekit.load();}catch(e){}
    %meta(name="viewport" content="width=device-width, minimum-scale=1.0, maximum-scale=1.0")
    %meta(name="description" content="A simple datepicker/calendar plugin for jQuery.")
  %body
    #wrapper
      %header
        %h1<>
          jQuery
          %span<> .minical
        %h2 a lightweight datepicker plugin
        %p
          by
          %a(href="http://camerondaigle.com") Cameron Daigle
      %form.basic
        %dl
          %dt
            %label Pick a date:
          %dd
            %input(type="text")
            %a(href="#" class="calendar_icon")
      %form.inline
        %dl
          %dt
            %label Or, here's an inline calendar:
          %dd
            %input(type="text")
      %article#readme= partial 'documentation'
    :javascript
      $("form.basic :text").minical({
        trigger: "a.calendar_icon"
      });
      $("form.inline :text").minical({
        inline: true
      });
